generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @unique @default(cuid())
  email        String   @unique
  password     String?
  name         String
  refreshToken String?
  role         Role     @default(OWNER)
  provider     Provider @default(LOCAL)

  @@index([id])
  @@index([role])
  @@index([email])
}

model Product {
  id          String   @unique @default(cuid())
  name        String
  category    String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Provider {
  LOCAL
  GOOGLE
}

enum Role {
  OWNER
  MANAGER
  CUSTOMER
}
